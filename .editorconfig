# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,css,scss,html}]
charset = utf-8

[*.html]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 2

[Makefile]
indent_style = tab

[*.js, *.json]
indent_style = space
indent_size = 4
